<h2>名前</h2>
<p><%= @title.name %></p>
<h2>内容</h2>
<p><%= @title.body %></p>
<h2>画像</h2>
<%= attachment_image_tag @title, :image, :fill, 300, 300, format: 'jpeg' %>


<%= link_to "編集", edit_new_post_path(@title.id) %>
<%= link_to"削除", destroy_new_post_path(@title.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>